FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
     WORKDIR /app
     EXPOSE 80
     EXPOSE 443

     FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build 
     WORKDIR /src COPY . . 
     RUN dotnet restore "CustorPortalAPI.csproj" 
     RUN dotnet build "CustorPortalAPI.csproj" -c Release -o /app/build

     FROM build AS publish
     RUN dotnet publish "CustorPortalAPI.csproj" -c Release -o /app/publish 

     FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS final 
     WORKDIR /app 
     COPY --from=publish /app/publish . 
     ENTRYPOINT ["dotnet", "CustorPortalAPI.dll"]